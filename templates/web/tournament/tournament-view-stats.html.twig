{% extends 'web/web.base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/tournament/tournament-view-index-page.css">
    <link rel="stylesheet" type="text/css" href="/css/tournament/tournament-view-stats-page.css">
{% endblock %}

{% block content %}
    <div class="events-page">
        <div class="event-hub">
            <h1 class="event-hub-title">{{ tournament.name }}</h1>
            <div class="event-hub-bottom">
                <a href="/tournament/{{ tournament.id }}" class="event-hub-link ">Информация</a>
                <a href="/tournament/{{ tournament.id }}?tab=matches" class="event-hub-link ">Матчи</a>
                <a href="/tournament/{{ tournament.id }}?tab=stats" class="event-hub-link active">Статистика</a>
            </div>
        </div>
        <div class="standard-headline">Топ-8 игроков по KDA</div>
        {% for player in topPlayers %}
            <div class="top-x-box standard-box">
                <a href="/player/{{ player.player.id }}" class="name" rel="noopener">{{ player.player.nickname }}</a>
                <div class="flex-placeholder"></div>
                <div class="rating"><span class="bold">{{ player.kda }}</span><br>KDA</div>
                <div class="average"><span class="bold">{{ player.mapPlayed }}</span><br>Карт сыграно
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}