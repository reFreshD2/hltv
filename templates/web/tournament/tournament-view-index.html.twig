{% extends 'web/web.base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/tournament/tournament-view-index-page.css">
    <link rel="stylesheet" type="text/css" href="/css/tournament/tournament-view-info-page.css">
{% endblock %}

{% block content %}
    <div class="events-page">
        <div class="event-hub">
            <h1 class="event-hub-title">{{ tournament.name }}</h1>
            <div class="event-hub-bottom">
                <a href="/tournament/{{ tournament.id }}" class="event-hub-link active">Информация</a>
                <a href="/tournament/{{ tournament.id }}?tab=matches" class="event-hub-link ">Матчи</a>
                <a href="/tournament/{{ tournament.id }}?tab=stats" class="event-hub-link ">Статистика</a>
            </div>
        </div>
        <div class="teams-attending-header-con">
            <div class="section-header"><span id="TeamsAttending">Список команд</span></div>
        </div>
        <div class="teams-attending grid">
            {% for team in tournament.teams %}
                <div class="col standard-box team-box">
                    <div class="team-name">
                        <a href="/teams/{{ team.id }}">
                            <div class="text-container">
                                <div class="text">{{ team.name }}</div>
                            </div>
                        </a>
                    </div>
                    <div class="lineup-box">
                        <div class="logo-bg">
                            <img
                                    alt="{{ team.name }}"
                                    src="/img/default/team.png"
                                    class="logo"
                                    title="{{ team.name }}"
                            >
                        </div>
                        {% for player in team.players %}
                            <div class="player text-ellipsis">
                                <a href="/player/{{ player.id }}">{{ player.nickname }}</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}